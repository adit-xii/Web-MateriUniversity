@model IEnumerable<_03.Materi.University.ViewModel.JurusanViewModel>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.kode_jurusan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nama_jurusan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.akreditasi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.is_active)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.created_by)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.created_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.updated_by)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.updated_date)
        </th>
        <th></th>
    </tr>

    @if (Model != null)
    {
        foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.kode_jurusan)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.nama_jurusan)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.akreditasi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.is_active)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.created_by)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.created_date)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.updated_by)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.updated_date)
    </td>
    <td>
        <button title="Edit" class="btn_grid_edit btn btn-warning" data-id="@item.id_jurusan_pk">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </button>
        <button title="Delete" class="btn_grid_details btn btn-info" data-id="@item.id_jurusan_pk">
            <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
        </button>
    </td>
</tr>
        }
    }

</table>


<script type="text/javascript">

    $(".btn_grid_edit").click(function () {
        //alert('Id nya adalah :' + $(this).attr("data-id"));
        $("#modal-edit-form").modal("show");
        $(".modal-title").html("Edit Form Program Studi");
        $(".div-bind-content").html(progHtml);

        $.ajax({
            url: '@Url.Action("Edit", "Jurusan")',
            type: 'get',
            data: { paramId: $(this).attr("data-id") },
            success: function (result) {
                $(".div-bind-content").html(result);
            }
        });
    });

    $(".btn_grid_details").click(function () {
        //alert('Id nya adalah :' + $(this).attr("data-id"));
        $("#modal-edit-form").modal("show");
        $(".modal-title").html("Details Program Studi");
        $(".div-bind-content").html(progHtml);

        $.ajax({
            url: '@Url.Action("Details", "Jurusan")',
            type: 'get',
            data: { paramId: $(this).attr("data-id") },
            success: function (result) {
                $(".div-bind-content").html(result);
            }
        });
    });

</script>
